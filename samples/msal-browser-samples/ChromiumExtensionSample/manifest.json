{
    "$schema": "https://json.schemastore.org/chrome-manifest.json",
    "name": "MSAL Browser Sample Chromium Extension",
    "version": "1.0",
    "description": "Sample extension demonstrating how to use MSAL Browser",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "identity",
        "identity.email"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [{
        "resources": ["index.html"],
        "matches": [],
        "extension_ids": []
      }],
    "background": {
        "service_worker": "background.js"
    },
    "incognito": "not_allowed"
  }
